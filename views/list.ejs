<%- include("header") -%> 
        <div class="box" id="heading">
            <h1><%= ListTitle %> !</h1>
        </div>
        <div class="box">
            <% newItem.forEach(element => {%>
                <form action="/delete" method="post">
                    <div class="item">
                        <input type="checkbox" name="checkbox" value="<%= element.name%>" onchange="this.form.submit()">
                        <p><%= element.name %> </p>
                        <input type="hidden" name="nameList" >
                    </div>
                </form>
            <%})%>

            <form action="/" method="POST">
                <input type="text" name="add" placeholder="New item" autocomplete="off">
                <button type="submit" name="list" value=<%= ListTitle %> >+</button>
            </form>
        </div>
<%- include("footer") -%> 